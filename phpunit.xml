<?xml version="1.0" encoding="UTF-8"?>
<phpunit
         backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         syntaxCheck="false"
         bootstrap="vendor/autoload.php"
>
    <php>
        <var name="DB_DSN" value="mysql:dbname=quick_tag;host=localhost" />
        <var name="DB_USER" value="root" />
        <var name="DB_PASSWD" value="vagrant" />
        <var name="DB_DBNAME" value="quick_tag" />
    </php>
    <testsuites>
        <testsuite name="default">
            <directory suffix="Test.php">src/QuickTag/Tests/</directory>
            <exclude>src/QuickTag/Tests/TestsWithFixture.php</exclude>
        </testsuite>
        <testsuite name="api">
            <directory suffix="Test.php">src/QuickTagSilex/Tests/</directory>
            <exclude>src/QuickTagSilex/Tests/TestsWithFixture.php</exclude>
        </testsuite>
  </testsuites>  
    
</phpunit>
